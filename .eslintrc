{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "Promise": false,
        "$": false,
        "app": false,
        "Chart": false,
        "QueryParams": false,
        "moment": false,
        "I18n": false,
        "FileReader": false,
        "Mustache": false,
        "jQuery": false,
        "Confirm": false,
        "google": false,
        "toastr": false,
        "for": false,
        "swal": false,
        "DataTable": false,
        "CreatePayButton": false,
        "interact": false,
        "Switchery": false,
        "parseAlerts": false,
        "PayButtonImage": false,
        "html2canvas": false,
        "$buttonDelete": false,
        "Clipboard": false,
        "Plan": false,
        "$thisSubmit": false,
        "openModalWindowAjaxCallback": false,
        "$oldModal": false,
        "SubIdOperations": false,
        "NotLaunched": false,
        "loadTouchSpin": false,
        "$object": false,
        "$element": false,
        "AffiliateIndex": false,
        "d3": false,
        "Ladda": false,
        "DimeSale": false,
        "SignUpForm": false,
        "CountrySelect": false,
        "PaymentTable": false,
        "UserOperations": false,
        "ProductFullCalendar": false,
        "OperationTeam": false,
        "ContestOptions": false,
        "ConsultantsDataTable": false,
        "Spinner": false,
        "registrationUserCall": false,
        "Loader": false
    },
    "rules": {
        //possible errors
        "comma-dangle": 2,
        "no-cond-assign": [2, "always"],
        "no-constant-condition": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-ex-assign": 2,
        "no-extra-boolean-cast": 1,
        "no-extra-parens": 1,
        "no-extra-semi": 1,
        "no-inner-declarations": 2,
        "no-invalid-regexp": 2,
        "no-irregular-whitespace": [2, { "skipComments": true }],
        "no-negated-in-lhs": 2,
        "no-obj-calls": 2,
        "no-regex-spaces": 2,
        "no-sparse-arrays": 2,
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "use-isnan": 2,
        //best practices
        "accessor-pairs": 1,
        "array-callback-return": 2,
        "block-scoped-var": 2,
        "curly": 2,
        "default-case": 2,
        "dot-location": [2, "property"],
        "dot-notation": 1,
        "eqeqeq": 2,
        "guard-for-in": 1,
        "no-case-declarations": 1,
        "no-else-return": 1,
        "no-empty-function": 1,
        "no-empty-pattern": 2,
        "no-extend-native": 2,
        "no-extra-bind": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implicit-coercion": 2,
        "no-implicit-globals": 2,
        "no-invalid-this": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-magic-numbers": [2, { "ignore": [-1, 0, 1, 2] }],
        "no-multi-spaces": 2,
        "no-redeclare": 2,
        "no-return-assign": 2,
        "no-self-assign": 2,
        "no-param-reassign": 2,
        "no-unmodified-loop-condition": 2,
        "no-unused-expressions": 1,
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-useless-escape": 1,
        "vars-on-top": 2,
        "wrap-iife": [2, "inside"],
        "yoda": 1,
        //variables
        "no-delete-var": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "no-use-before-define": [0, { "classes": false, "functions": false }],
        //node.js
        "callback-return": 2,
        "global-require": 1,
        "no-path-concat": 2,
        //stylistic issues
        "block-spacing": 2,
        "brace-style": 2,
        "camelcase": [2, { "properties": "never" }],
        "comma-spacing": 2,
        "computed-property-spacing": 2,
        "consistent-this": 2,
        "eol-last": 1,
        "id-length": [2, { "min": 2, "exceptions": ["x", "y", "i", "j"] }],
        "indent": [2, 2],
        "key-spacing": 2,
        "keyword-spacing": 2,
        "new-parens": 1,
        "newline-after-var": 1,
        "newline-before-return": 1,
        "no-bitwise": 2,
        "no-lonely-if": 2,
        "no-multiple-empty-lines": 2,
        "no-nested-ternary": 1,
        "no-spaced-func": 2,
        "no-trailing-spaces": 1,
        "no-underscore-dangle": 2,
        "no-unneeded-ternary": 2,
        "no-whitespace-before-property": 2,
        "object-curly-spacing": [2, "always"],
        "one-var": 2,
        "operator-assignment": 2,
        "operator-linebreak": [2, "before"],
        "quotes": [2, "single", { "allowTemplateLiterals": true }],
        "semi": 2,
        "semi-spacing": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-unary-ops": [2, { "words": true, "nonwords": false }],
        //es6
        "arrow-spacing": 2,
        "constructor-super": 2,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-duplicate-imports": 2,
        "no-this-before-super": 2,
        "no-useless-computed-key": 2,
        "no-useless-constructor": 2,
        "prefer-rest-params": 2,
        "template-curly-spacing": 2
    }
}
